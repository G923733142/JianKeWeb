
.title{
    font-family: 华文行楷;
    font-size: 150px;
    color: #ffffff;
}


ol,ul,li{
    list-style:none;
}

img{
    border:none;
    display:block;
}
a:not(.btn) {
    color: #00699E;
    transition: all 300ms ease 0s;
}
a:hover:not(.btn), a:active:not(.btn) {
    color: #9E0000;
    text-decoration: none;
    transform: translateY(-8px);
}


.nav a {
    transition: all 500ms ease 0s;
}



