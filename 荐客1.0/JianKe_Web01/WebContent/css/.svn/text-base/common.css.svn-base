.navbar-wrapper .navbar{position: absolute; left: 0; right: 0; z-index: 10;}
.navbar .navbar-inner{border: 0; -webkit-box-shadow: 0 2px 10px rgba(0,0,0,.25); -moz-box-shadow: 0 2px 10px rgba(0,0,0,.25); box-shadow: 0 2px 10px rgba(0,0,0,.25);}
.navbar .brand{padding: 14px 20px 16px; font-size: 30px; font-weight: bold; text-shadow: 0 -1px 0 rgba(0,0,0,.5);}
.navbar .nav > li > a{padding: 15px 20px;}


.mask{margin:0;padding:0;border:none;width:100%;height:100%;background:#333;opacity:0.6;filter:alpha(opacity=60);z-index:9999;position:fixed;top:0;left:0;display:none;}
